<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/generic"
    android:gravity="top" >

    <TextView
        android:id="@+id/searchlab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/search_title"
        android:textColor="@color/unavailable"
        android:textSize="33sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/radiolayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchlab"
        android:layout_centerHorizontal="true"
        android:paddingBottom="25dp"
        android:paddingTop="25dp" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radio_any_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonClicked"
                android:text="@string/search_option_one"
                android:textColor="@color/unavailable"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/radio_lot_spot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/search_option_two"
                android:textColor="@color/unavailable"
                android:textSize="22sp" />
        </RadioGroup>

        <Spinner
            android:id="@+id/spinner_lots"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/unavailable" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiolayout"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/reservebuttonsearch"
            style="@style/btnStyleOrange"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:onClick="loadLotStatus"
            android:text="@string/status_button"
            android:textSize="22sp" />

        <Button
            android:id="@+id/directionsbuttonsearch"
            style="@style/btnStyleOrange"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reservebuttonsearch"
            android:onClick="loadDirs"
            android:text="@string/directions_button"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>